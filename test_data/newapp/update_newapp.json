{
  "kubernetes": [
    {
      "apiVersion": "extensions/v1beta1",
      "kind": "Deployment",
      "metadata": {
        "name": "$newapp_name",
        "namespace": "$K8S_NAMESPACE"
      },
      "spec": {
        "replicas": 1,
        "template": {
          "metadata": {
            "labels": {
              "app": "$newapp_name"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "$IMAGE",
                "name": "containersname",
                "ports": [
                  {
                    "containerPort": 80,
                    "name": "portsname"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "$newapp_name",
        "labels": {
          "app": "$newapp_name"
        }
      },
      "spec": {
        "ports": [
          {
            "port": 80
          }
        ],
        "selector": {
          "app": "$newapp_name"
        },
        "clusterIP": "None"
      }
    },
    {
      "kind": "ClusterRole",
      "apiVersion": "rbac.authorization.k8s.io/v1",
      "metadata": {
        "name": "$newapp_name"
      },
      "rules": [
        {
          "apiGroups": [
            ""
          ],
          "resources": [
            "secrets"
          ],
          "verbs": [
            "get",
            "watch",
            "list"
          ]
        }
      ]
    }
  ]
}